<div class="flex justify-center w-full" ...attributes>
  <div class="w-full max-w-md lg:max-w-2xl">
    <label for="find-user" class="block text-xs font-semibold uppercase mb-1">
      Nome de usu√°rio do GitHub
    </label>
    <div class="flex">
      <Input @id="find-user" @type="text" @value={{this.user}} @input={{action (mut this.user) value="target.value" }}
        @enter={{this.searchUser}} @focus-in={{this.onFocusIn}} @focus-out={{this.onFocusOut}}
        class="appearance-none rounded-l p-2 lg:p-4 border-t mr-0 border-b border-l text-primary lg:text-xl border-gray-200 bg-white w-full focus:outline-none"
        tabindex="1" />

      <button type="button" {{on "click" this.searchUser}}
        class="flex items-center px-8 lg:px-16 rounded-r bg-green-500 text-white lg:text-xl font-bold p-2 lg:p-4 uppercase border-green-500 border-t border-b border-r"
        tabindex="2">
        <FaIcon @icon="search" class="mr-2 lg:text-xl" />
        Buscar
      </button>
    </div>
  </div>
</div>